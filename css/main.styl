@media screen and (max-width: 480px) {
  .zoomha {
    &-wrapper {
      width: 100%
      padding: 0 0 400px
      border none
    }

    &-top, &-menu, &-info {
      display: none
    }

    &-header {
      padding: 0 10px;
      position: relative;
      width: 100%;
      top: 0;
    }

    &-logo {
      &__link {
        margin: 0 auto 20px;
      }
    }

    &-mainbanner { //todo
      overflow: hidden;
      &__img {
        max-width 100%
      }
    }

    &-about {
      display: block
      padding: 20px

      &__item {
        &_first {
          text-align: left
        }
      }
    }

    &-shop {
      margin: 0

      &__img  {
        max-width 100%
      }
    }

    &-popular {
      padding: 20px
    }

    &-catalog {
      padding: 20px
    }

    &-banners {
      display: block

      &__item {
        display: block
      }

      &__img {
        width: 100%
      }
    }

    &-content {
      display: block
    }

    &-leftcol {
      display: none
    }

    &-rightcol {
      padding: 0
    }

    &-filters {
      display: none
    }

    &-products {
      &__list {
        display: block
      }

      &__item {
        max-width 100%
      }
    }

    &-page {
      padding: 20px
    }

    &-bonuses {

      &_page {
        margin: 0 -20px;
        padding: 20px;
      }

      &__list {
        display: block
      }

      &__item {
        max-width 100%
        margin-bottom: 20px
      }
    }

    &-basket {
      padding: 20px
    }

    &-goods {

      &__item {
        display: block
        position: relative
      }

      &__title {
        position: absolute;
        top: 10px;
        left: 140px;
        padding-right: 40px;
      }

      &__close {
        position: absolute;
        top: 10px;
        right: -10px;
        width: 24px;
      }

      &__txt {
        position: absolute;
        top: 50px;
        left: 140px;
      }

      &__total {
        margin: 10px 0 30px 120px;
      }

      &__num {
        position: absolute;
        bottom: 5px;
        left: 140px;
      }
    }

    &-order {
      &__item {
        justify-content: flex-start
      }

      &__buy {
        width: 100%;
        box-sizing: border-box;
      }
    }

    &-choose {
      &__list {
        display: block
      }

      &__item {
        margin-bottom: 20px;
      }
    }

    &-bee {
      width: 100%;
      background-size: contain;
    }

    &-error {
      width: 100%;
      background-size: contain;
    }

    &-footer {
      display: block;
      width: 100%;
      padding: 20px;
      text-align: center;
      margin-top: -400px
    }

    &-mobile {
      display: block

      &__buttons {
        display: flex
        justify-content space-between
        margin-bottom: 20px
      }

      &__button {
        background: $grey;
        border: 1px solid $grey;
        box-sizing: border-box;
        border-radius: 10px;
        flex-basis 48%
        text-align: center
        height: 30px;
        line-height: 30px;
        cursor pointer
      }
    }
  }

  .blocker {
    &:before {
      display: none
    }
  }

  .modal {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    border-radius: 0;
  }
}

